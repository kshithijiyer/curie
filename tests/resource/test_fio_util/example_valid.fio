[global]
ioengine=libaio
direct=1
runtime=3600
time_based
norandommap
ba=4k
continue_on_error=all

[db-oltp1]
bssplit=8k/90:32k/10,8k/90:32k/10
size=28G
filename=/dev/sdd
rw=randrw
iodepth=128
rate_iops=650,650

[db-oltp2]
bssplit=8k/90:32k/10,8k/90:32k/10
size=28G
filename=/dev/sde
rw=randrw
iodepth=128
rate_iops=650,650
