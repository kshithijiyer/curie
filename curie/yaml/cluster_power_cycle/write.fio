[global]
ioengine=libaio
direct=1
time_based
norandommap
group_reporting
disk_util=0
continue_on_error=verify
rate_process=poisson
verify=meta
verify_pattern=0xdeadbeefdeadbeef
verify_dump=1
random_generator=lfsr
do_verify=0

[db-oltp1]
bs=32k
size=28G
filename=/dev/sdd
rw=randwrite
iodepth=8
rate_iops=500,500

[db-oltp2]
bs=32k
size=28G
filename=/dev/sde
rw=randwrite
iodepth=8
rate_iops=500,500

[db-oltp3]
bs=32k
size=28G
filename=/dev/sdf
rw=randwrite
iodepth=8
rate_iops=500,500

[db-oltp4]
bs=32k
size=28G
filename=/dev/sdg
rw=randwrite
iodepth=8
rate_iops=500,500

[db-log1]
bs=32k
size=2G
filename=/dev/sdb
rw=randwrite
percentage_random=10
iodepth=1
iodepth_batch=1
rate_iops=100

[db-log2]
bs=32k
size=2G
filename=/dev/sdc
rw=randwrite
percentage_random=10
iodepth=1
iodepth_batch=1
rate_iops=100
