[global]
ioengine=libaio
direct=1
time_based
norandommap
group_reporting
disk_util=0
continue_on_error=verify
rate_process=poisson
verify=meta
verify_pattern=0xdeadbeefdeadbeef
verify_dump=1
random_generator=lfsr
do_verify=1

[db-oltp1]
bs=32k
size=28G
filename=/dev/sdd
rw=read
iodepth=8

[db-oltp2]
bs=32k
size=28G
filename=/dev/sde
rw=read
iodepth=8

[db-oltp3]
bs=32k
size=28G
filename=/dev/sdf
rw=read
iodepth=8

[db-oltp4]
bs=32k
size=28G
filename=/dev/sdg
rw=read
iodepth=8

[db-log1]
bs=32k
size=2G
filename=/dev/sdb
rw=read
iodepth=8

[db-log2]
bs=32k
size=2G
filename=/dev/sdc
rw=read
iodepth=8
